pipeline {
    agent any

    environment {
        SLACK_WEBHOOK_URL = credentials('slack-webhook')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'cicd', url: 'https://github.com/GoormTeam1/frontend-v2.git'
                echo 'ğŸ”„ ì†ŒìŠ¤ ì½”ë“œ ì²´í¬ì•„ì›ƒ ì™„ë£Œ'
